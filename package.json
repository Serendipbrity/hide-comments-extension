{
  "name": "vcm-extension",
  "displayName": "VCM - Versioned Comment Manager",
  "version": "0.1.0",
  "publisher": "Brittani Court",
  "description": "Invisible documentation layer for code - keep repos clean, comments versioned",
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./vcm-extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vcm.toggleCurrentFileComments",
        "title": "VCM: --- Current File: --- View/Hide Comments"
      },
      {
        "command": "vcm.toggleSplitViewComments",
        "title": "VCM: --- Split View: --- View/Hide Comments"
      },
      {
        "command": "vcm.toggleLocalComments",
        "title": "VCM: Hide/Show Local Comments (Repo-Wide)"
      }
    ],
    "keybindings": [
      {
        "command": "vcm.toggleComments",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "VCM Settings",
      "properties": {
        "vcm.autoSplitView": {
          "type": "boolean",
          "default": true,
          "description": "Open the comments view in a split editor on the right"
        },
        "vcm.liveSync": {
          "type": "boolean",
          "default": false,
          "description": "Auto-save .vcm files while typing (2 second debounce)"
        }
      }
    }
  },
  "categories": ["Other"],
  "keywords": ["comments", "documentation", "code-review", "clean-code"],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vcm-extension"
  },
  "license": "MIT"
}